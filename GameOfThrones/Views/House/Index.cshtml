@model IEnumerable<GameOfThrones.Models.House>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Houses";
}

<h2>Houses</h2>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Region)</th>
        <th>@Html.DisplayNameFor(model => model.Words)</th>
        <th>@Html.DisplayNameFor(model => model.Castle)</th>
        <th>Members</th>
    </tr>
    @foreach (var house in Model)
    {
        <tr>
            <td>@Html.DisplayFor(field => house.Name)</td>
            <td>@Html.DisplayFor(field => house.Region)</td>
            <td>@Html.DisplayFor(field => house.Words)</td>
            <td>@Html.DisplayFor(field => house.Castle.Name)</td>
            <td><input type="button" onclick="@("window.location.href='" + @Url.Action("Characters", "House") + "/" + house.Id + "'");" value="View members"></td>
        </tr>
    }
</table>
